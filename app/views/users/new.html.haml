- @title = "Register"
%div{:style => "padding: 1em;"}
  %h1
    New #{$SITE} Account
  = form_for(:user, :url => users_path) do |f|
    - unless @errors.nil?
      .enable-lists{:style => "color: red; padding: 1em;"}
        Errors creating your account:
        %ul
          - for error in @errors
            %li= error
    = render :partial => 'form', :locals => {:f => f}
